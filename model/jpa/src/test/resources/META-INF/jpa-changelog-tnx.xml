<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!--modifies the credentials to the new format, while copying the data as json in the new fields-->
    <changeSet author="tnx" id="8.0.1-events">

        <addColumn tableName="EVENT_ENTITY">
            <column name="HOSTNAME" type="VARCHAR(255)"/>
            <column name="NODE_ID" type="VARCHAR(255)"/>
            <column name="VM_ID" type="VARCHAR(255)"/>
        </addColumn>

        <addColumn tableName="ADMIN_EVENT_ENTITY">
            <column name="HOSTNAME" type="VARCHAR(255)"/>
        </addColumn>

    </changeSet>

</databaseChangeLog>
